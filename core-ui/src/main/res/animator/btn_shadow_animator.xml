<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <set>
            <objectAnimator
                android:duration="@android:integer/config_shortAnimTime"
                android:propertyName="translationZ"
                android:valueTo="@dimen/btn_shadow_animator_pressed_value"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="0"
                android:propertyName="elevation"
                android:valueTo="@dimen/btn_default_elevation"
                android:valueType="floatType" />
        </set>
    </item>
    <item android:state_enabled="true"  android:state_pressed="false">
        <set>
            <objectAnimator
                android:duration="100"
                android:propertyName="translationZ"
                android:valueTo="@dimen/btn_shadow_animator_released_value"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="0"
                android:propertyName="elevation"
                android:valueTo="@dimen/btn_default_elevation"
                android:valueType="floatType" />
        </set>
    </item>
    <item android:state_enabled="false" android:state_pressed="false">
        <set>
            <objectAnimator
                android:duration="0"
                android:propertyName="elevation"
                android:valueTo="@dimen/zero_dp"
                android:valueType="floatType" />
        </set>
    </item>
</selector>


