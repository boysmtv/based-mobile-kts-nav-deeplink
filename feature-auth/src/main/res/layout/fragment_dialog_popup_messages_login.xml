<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dialog_popup_messages_login_card_view_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_popup_messages_login_card_view_margin"
        android:elevation="@dimen/dialog_popup_messages_login_card_view_elevation"
        app:cardCornerRadius="@dimen/dialog_popup_messages_login_card_view_CornerRadius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_dialog_popup_messages"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_popup_messages_login_edit_text_title_marginStart"
                android:layout_marginTop="@dimen/dialog_popup_messages_login_edit_text_title_marginTop"
                android:layout_marginEnd="@dimen/dialog_popup_messages_login_edit_text_title_marginEnd"
                android:contentDescription="@null"
                android:gravity="center"
                android:textColor="@color/colorBlackCharacterHighEmphasis"
                android:textSize="@dimen/dialog_popup_messages_login_edit_text_title_text_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/iv_close_dialog_popup_messages"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_close_dialog_popup_messages"
                android:layout_width="@dimen/dialog_popup_messages_login_iv_close_width"
                android:layout_height="@dimen/dialog_popup_messages_login_iv_close_height"
                android:layout_marginEnd="@dimen/dialog_popup_messages_login_iv_close_marginEnd"
                android:contentDescription="@null"
                android:padding="@dimen/dialog_popup_messages_login_iv_close_padding"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title_dialog_popup_messages"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_title_dialog_popup_messages" />

            <ImageView
                android:id="@+id/iv_status_dialog_popup_messages"
                android:layout_width="@dimen/dialog_popup_messages_login_iv_status_width"
                android:layout_height="@dimen/dialog_popup_messages_login_iv_status_height"
                android:layout_marginTop="@dimen/dialog_popup_messages_login_iv_status_marginTop"
                android:contentDescription="@null"
                android:src="@drawable/ic_close_rounded_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_dialog_popup_messages" />

            <TextView
                android:id="@+id/tv_desc_dialog_popup_messages"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_popup_messages_login_tv_desc_marginStart"
                android:layout_marginTop="@dimen/dialog_popup_messages_login_tv_desc_marginTop"
                android:layout_marginEnd="@dimen/dialog_popup_messages_login_tv_desc_marginEnd"
                android:layout_marginBottom="@dimen/dialog_popup_messages_login_tv_desc_marginBottom"
                android:gravity="center"
                android:textColor="@color/colorTextFieldGray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_status_dialog_popup_messages" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
